# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/multitenant_db

# JWT Authentication
SECRET_KEY=your-super-secret-jwt-key-here-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET_PREFIX=company-docs

# Anthropic AI Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Application Configuration
DEBUG=False
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,http://frontend:3000

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,docx,txt,md,csv,xlsx

# Database Pool Settings (Optional)
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://redis:6379/0

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True 