# Docker Compose Configuration
COMPOSE_PROJECT_NAME=multitenant-doc-system

# Database Configuration
POSTGRES_DB=multitenant_db
POSTGRES_USER=docuser
POSTGRES_PASSWORD=your-secure-db-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Application Ports
BACKEND_PORT=8000
FRONTEND_PORT=3000
DB_PORT=5432
REDIS_PORT=6379

# Environment
ENVIRONMENT=development  # development, staging, production

# Docker Images (Optional - if using custom registry)
BACKEND_IMAGE=multitenant-backend:latest
FRONTEND_IMAGE=multitenant-frontend:latest

# Volume Paths (Optional - for custom mount points)
DB_DATA_PATH=./data/postgres
REDIS_DATA_PATH=./data/redis
LOGS_PATH=./logs

# Network Configuration
NETWORK_NAME=multitenant-network

# SSL Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=
ENABLE_SSL=false

# Backup Configuration (Optional)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_REGION=

# Monitoring (Optional)
ENABLE_MONITORING=false
GRAFANA_PORT=3001
PROMETHEUS_PORT=9090 